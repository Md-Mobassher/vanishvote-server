{
  "name": "vanish_vote",
  "version": "1.0.0",
  "description": "Build a simple vanish_vote web app where users can create anonymous polls that disappear after a set time. No login required, and results are only visible until the poll expires.",
  "main": "./src/server.ts",
  "author": "Md Mobassher Hossain <mdmobassherhossain1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Md-Mobassher/vanishvote-server.git"
  },
  "homepage": "https://github.com/Md-Mobassher/vanishvote-server#readme",
  "keywords": [],
  "scripts": {
    "prod": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint-check": "eslint src --ignore-path .eslintignore --ext .ts",
    "lint-fix": "npx eslint src --fix",
    "prettier-check": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "prettier-fix": "npx prettier --write src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "mongoose": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
